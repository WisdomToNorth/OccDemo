{
    "name": "Ubuntu 22.04 test KYC",
    "image": "ubuntu:22.04",
    "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools-extension-pack"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "runArgs": [
        "--privileged"
    ],
    "remoteUser": "vscode",
    "workspaceMount": "source=/path/to/local/folder,target=/workspace,type=bind,consistency=cached",
    "containerEnv": {
        "DEBIAN_FRONTEND": "noninteractive"
    },
    "postCreateCommand": "apt-get update && apt-get install -y g++ qt5-default cmake ninja-build libompl-dev libfmt-dev libgtest-dev && cd /usr/src/gtest && cmake . && make && cp *.a /usr/lib"
}
